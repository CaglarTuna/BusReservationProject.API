@model BusReservationProject.WEB.DTOs.TicketDto

<h1>Booking Ticket</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="BookTicket">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                    <label asp-for="Plate">Plate</label>
                    <input asp-for="Plate" class="form-control" />
                    <span class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="SeatNumbers">SeatNumber</label><br />
                <select asp-for="SeatNumbers">
                    @for (int i = 1; i < 21; i++)
                    {
                        <option>@i</option>
                    }
                </select>
                <span class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Book Ticket" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
